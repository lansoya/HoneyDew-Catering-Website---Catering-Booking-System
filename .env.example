# Environment Configuration Template
# Copy this file to .env and update the values
# DO NOT commit .env file to version control

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=honeydew_catering
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_CHARSET=utf8mb4

# Application Configuration
APP_NAME="HoneyDew Catering Services"
APP_URL=http://localhost/honeydew-catering
APP_DEBUG=true
APP_TIMEZONE=Asia/Kuala_Lumpur

# Security Keys
APP_KEY=your-32-character-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# Admin Configuration
ADMIN_EMAIL=admin@honeydew-catering.com
CONTACT_EMAIL=contact@honeydew-catering.com

# Email Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@honeydew-catering.com
MAIL_FROM_NAME="HoneyDew Catering"

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Business Configuration
CURRENCY=MYR
CURRENCY_SYMBOL=RM
TAX_RATE=0.06
MIN_ORDER_AMOUNT=100.00
ADVANCE_BOOKING_DAYS=2
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=18:00

# Payment Gateway (if using)
PAYMENT_GATEWAY=manual
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Cache Configuration
CACHE_ENABLED=true
CACHE_DURATION=3600

# API Configuration
API_ENABLED=true
API_VERSION=v1
API_RATE_LIMIT=100

# Social Media Links
FACEBOOK_URL=https://facebook.com/honeydewcatering
INSTAGRAM_URL=https://instagram.com/honeydewcatering
TWITTER_URL=https://twitter.com/honeydewcatering

# Logging
LOG_LEVEL=debug
LOG_ERRORS=true
ERROR_LOG_FILE=logs/error.log

# Development Tools
ENABLE_PROFILER=false
SHOW_QUERY_LOG=false